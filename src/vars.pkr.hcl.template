variable "pm_user" {
  type        = string
  description = "Proxmox User Name"
  default     = "$packer_username"
}
variable "pm_pass" {
  type        = string
  description = "Proxmox User Password"
  default     = "$packer_password"
}
variable "ssh_user" {
  type        = string
  description = "SSH User"
  default     = "$packer_username"
}
variable "ssh_pass" {
  type        = string
  description = "SSH Password"
  default     = "$packer_password"
}
